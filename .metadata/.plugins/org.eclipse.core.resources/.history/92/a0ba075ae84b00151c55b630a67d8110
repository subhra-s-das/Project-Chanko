package examples;

public class Inheritance_Example_01 {

	public static void main(String[] args) {

		Per person = new Per();
		person.setName("Subhra S. Das");

		person.setName("Ssss");
		System.out.println(person.getName());

		Students student = new Students();
		student.per();
		student.perNew();

		Per student1 = new Students();
		student1.setName("dass");
		student1.per();

	}

}

// SUPERCLASS
class Per {
	public String name;

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	String address;
	int age;

	public void setaddress(String address) {
		this.address = address;
	}

	public void setage(int age) {
		this.age = age;
	}

	// get methods
	public String getname() {
		// String name = this.name;
		return name;
	}

	public String getaddress() {
		// String address = this.address;
		return address;
	}

	public int getage() {
		// int age = this.age;
		return age;
	}

	public void per() {
		System.out.println("in perr " + this.getName());

	}

}

// SUBCLASS this inherits class Per
class Students extends Per {

	public void per() {
		System.out.println(this.name);

	}

	public void perNew() {
		// String name1=this.name;
		// System.out.println("name "+name1);
	}

}

// SUBCLASS this inherits class Students
class Engineer extends Students {

}